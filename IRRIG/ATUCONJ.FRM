Private Sub ValorTotalConjunto()
           
 Dim Tb As New GRecordset
 Dim TbConj As New GRecordset
 Dim ValorCusto As Currency
 
 If Conjunto > 0 Then
    Set TbConj = VgDb.OpenRecordSet("SELECT * FROM Conjuntos Where [Seqüência do Conjunto] = " & Conjunto)
 Else
    Set TbConj = VgDb.OpenRecordSet("SELECT * FROM Conjuntos Where [Seqüência do Conjunto] > 0 And Inativo = 0")   
 End If
 
  Do While Not TbConj.EOF
     Set Tb = vgdb.OpenRecordset("SELECT SUM([Valor de Custo] * [Quantidade do Produto]) AS Custo FROM Produtos INNER JOIN [Itens do Conjunto] ON Produtos.[Seqüência do Produto] = [Itens do Conjunto].[Seqüência do Produto] WHERE [Seqüência do Conjunto] = " & TbConj![Seqüência Do Conjunto])  
     ValorCusto = Round(Tb!Custo + Tb!Custo * Parametros_do_Produto![Percentual Acréscimo Conjunto] / 100, 2)
     vgDb.Execute "Update Conjuntos Set [Valor Total] = " & Substitui(ValorCusto * 1.7, ",", ".", SO_UM) & " WHERE [Seqüência do Conjunto] = " & TbConj![Seqüência Do Conjunto] 
     If Not Parametros_do_Produto![Ja atualizou] Then
        vgDb.Execute "Update Conjuntos Set [Valor Total] = " & Substitui(TbConj![Valor Total] * Parametros_do_Produto![Percentual 2] / 100 + TbConj![Valor Total], ",", ".", SO_UM) & " WHERE [Seqüência do Conjunto] = " & TbConj![Seqüência Do Conjunto]
     End If   
  TbConj.MoveNext
  Loop
  MsgBox "Custo Atualizado com Sucesso!!!", vbInformation + vbOKOnly, vaTitulo
End Sub

