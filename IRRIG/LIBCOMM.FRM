   x$ = "SELECT [Comissão do Montador].Imprimir, NFe, [Razão Social], [Valor Total], [Comissão do Montador].Percentual, Comissão, [Seqüência da Manutenção] " & _
        "FROM [Comissão do Montador] LEFT JOIN [Manutenção Contas] On [Comissão do Montador].Manutenção = [Manutenção Contas].[Seqüência da Manutenção] INNER JOIN Geral ON [Manutenção Contas].[Seqüência do Geral] = Geral.[Seqüência do Geral] WHERE " & Filtro() & " ORDER BY NFe"
      
