Private Sub Cancelamento()
   Dim Sequencia As Long
   On Error GoTo DeuErro
   
   If Me.Caption = "Cancela Orçamento" Then
      If Orcamento = 0 Then MsgBox "Favor Informar a Seqüência do Orçamento.", vbExclamation + vbOKOnly, vaTitulo: Exit Sub
      If MsgBox("Deseja Realmente Cancelar esse Orçamento?" & vbCrLf & "Essa Operação é Irreversível.", vbExclamation + vbYesNo, vaTitulo) = vbNo Then Exit Sub
      Sequencia = Orcamento
   Else
      If Proforma = 0 Then MsgBox "Favor Informar a Seqüência da Proforma.", vbExclamation + vbOKOnly, vaTitulo: Exit Sub
      If MsgBox("Deseja Realmente Cancelar essa Fatura Proforma?" & vbCrLf & "Essa Operação é Irreversível.", vbExclamation + vbYesNo, vaTitulo) = vbNo Then Exit Sub
      Sequencia = Proforma
   End If
   
   vgDb.BeginTrans
   vgDb.Execute "Update Orçamento Set Cancelado = 1 Where [Seqüência do Orçamento] = " & Sequencia
   vgDb.CommitTrans
   
   
   If Me.Caption = "Cancela Orçamento" Then
      MsgBox "Orçamento Cancelado com Sucesso!!!", vbInformation + vbOKOnly, vaTitulo
      Unload Me
   
      frmOrcament.Show
      frmOrcament.SetFocus
      PosicionaRegistro frmOrcament, "Seqüência do Orçamento", Sequencia
      frmOrcament.Reposition
      
   Else
      MsgBox "Fatura Proforma Cancelada com Sucesso!!!", vbInformation + vbOKOnly, vaTitulo
      Unload Me
   
      If FProformaAberto Then
         FProforma.SetFocus
         PosicionaRegistro FProforma, "Seqüência do Orçamento", Sequencia
         FProforma.Reposition
      Else
         FProforma.Caption = "Fatura Proforma"
         FProforma.vgFiltroInicial = "[Seqüência do Orçamento] > 0 AND [Fatura Proforma] = 1"
         InicializaFiltro FProforma
         FProforma.Reposition
         FProforma.Show
         PosicionaRegistro FProforma, "Seqüência do Orçamento", Sequencia
         FProformaAberto = True
      End If
      
   End If
   
DeuErro:
   If Err Then
      MsgBox Err.Description, vbCritical + vbOKOnly, vaTitulo
      vgDb.RollBackTrans
   End If
End Sub

