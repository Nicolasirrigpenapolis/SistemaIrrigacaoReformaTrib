Private Sub VerificaPermissao()
   
   On error Resume Next
   
   If Not PermitidoMenu(mnuNF.Tag) Then
      MsgBox "Você não tem Permissão para essa Consulta.", vbExclamation + vbOkOnly, vaTitulo
      Unload Me      
   End If

End Sub

Private Sub Prossegue()
   Dim Tb As New GRecordSet, vgFGrid As New frmBrowse
   
   On Error Resume Next
   
   With vgFGrid
      Tag = "Carta de Correção da Nota Fiscal"
            
      vgNovaQuery = "SELECT NF.[Seqüência da Nota Fiscal] As Seqüência, NF.[Número da NFe] As [Número da Nota], CCe.[Número da Correção], CCe.[Data Correção], CCe.[Justificativa CCe] As Justificativa " & _
                    "FROM [Carta de Correção NFe] CCe INNER JOIN [Nota Fiscal] NF ON CCe.[Seqüência da Nota Fiscal] = NF.[Seqüência da Nota Fiscal] " & _
                    "ORDER BY Seqüência, [Número da Nota], [Número da Correção]"
         
      Set Tb = vgDb.OpenRecordSet(vgNovaQuery)
           
      .vgTitConsulta = Tag
      With .grdBrowse
         .DefineOrderColumn .Columns("Seqüência").Index
         .ColumnWidth("Justificativa") = 5000
         .ShowFilterBar = True
         .Stripes = True
      End With
      Hide
      .Width = Screen.Width - 200
      .Top = (Screen.Height - .Height) / 2
      .Left = (Screen.Width - .Width) / 2
      .Show
      DoEvents
    End With
    Unload Me
End Sub


'evento - inicialização do formulário
Private Sub Form_Load()
   On Error GoTo DeuErro
   Screen.MousePointer = vbHourglass
   Caption = LoadGasString(129380)
