Private Sub Corrigir()
 Dim Tb As New GRecordSet
 Dim Tb1 As New GRecordSet
 Dim Contadorterceiro As Integer
 Dim terceiros As New GRecordSet
 
 Set Tb = vgDb.OpenRecordSet("select * from [Matéria Prima] left join Produtos on Produtos.[Seqüência Do Produto] = [Matéria Prima].[Seqüência do Produto] " & _
                             "where [Seqüência Do Grupo Produto] = 20 and [Seqüência Do SubGrupo Produto] = 48 and Inativo = 0 and [Matéria Prima].[Seqüência da Matéria Prima] <> 43602 and lance = 0 And descrição like '%Torre%' and [Tipo do Produto] = 0")
  Contadorterceiro = 0
  
  Do While Not Tb.EOF
   Set Tb1 = vgDb.OpenRecordSet("SELECT * FROM [Matéria Prima] Where [Seqüência do Produto] = " & Tb![Seqüência Do Produto])
   
      Do While Not Tb1.EOF
         Set terceiros = vgDb.OpenRecordSet("SELECT [Material Adquirido de Terceiro] From Produtos where [Seqüência do Produto] = " & Tb1![Seqüência da Matéria Prima])
         
         If terceiros![Material Adquirido de Terceiro] Then
           Contadorterceiro = Contadorterceiro + 1
           If Contadorterceiro <= 2 Then
              vgDb.Execute "Update Produtos Set [Tipo do Produto] = 6 Where [Seqüência do Produto] = " & Tb![Seqüência Do Produto]
           End If
       End If
    Tb1.MoveNext
    
    Loop
  Tb.MoveNext
  Contadorterceiro = 0
  Loop
  
End Sub

