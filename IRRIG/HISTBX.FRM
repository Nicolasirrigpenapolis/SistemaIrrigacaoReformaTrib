Private Sub AtualizaHistorico()
  If Baixa = 0 Then
     MsgBox("Informe a Sequencia da Baixa")
     Exit Sub
  End If
  vgDb.Execute "Update [Baixa Contas] Set [Histórico] = '" & Hist & "' Where [Seqüência da Baixa] = " & Baixa 
  MsgBox("Atualizado com Sucesso")
End Sub

Private Sub TabelasAuxiliares()
 Dim BaixaAux As New GRecordSet
  
   If Baixa > 0 Then
      Set BaixaAux = VgDb.OpenRecordSet("SELECT [Seqüência da Manutenção] From [Baixa Contas] Where [Seqüência da Baixa] = " & Baixa) 
      TbAuxiliar "Manutenção Contas", "[Seqüência da Manutenção] = " & BaixaAux![Seqüência da Manutenção], Manu2
      If Manu2.RecordCount > 0 Then
         TbAuxiliar "Geral", "[Seqüência do Geral] = " & Manu2![Seqüência Do Geral], GeralTb
      End If
      MostraFormulas
   End If
      
End Sub

