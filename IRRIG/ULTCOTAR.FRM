Private Sub UltimaCotacao()
 Dim Tb As New GRecordSet, Itens As New GRecordSet
 
  Set Itens = VgDb.OpenRecordSet("SELECT * FROM Produtos WHERE [Seqüência do Produto] > 0 And [Material Adquirido de Terceiro] = 1 And Inativo = 0")
 
   Do While Not Itens.EOF
      Set Tb = vgDb.OpenRecordSet("SELECT Max([Data do Pedido]) UltCompra From [Pedido de Compra Novo] Left Join [Produtos do Pedido Compra] On [Pedido de Compra Novo].[Id do Pedido] = [Produtos do Pedido Compra].[Id do Pedido] Where Cancelado = 0 And [Id do Produto] = " & Itens![Seqüência Do Produto])
      If IsNull(Tb!UltCompra) Then: Exit Sub
         VgDb.Execute "UPDATE Produtos Set [Ultima Cotação] = " & D(Tb!UltCompra) & " WHERE [Seqüência Do Produto] = " & Itens![Seqüência Do Produto]     
   Itens.MoveNext
   Loop
   
   MsgBox("Concluido com Sucesso") 
  
End Sub

