'Valida Bacen
Private Function ValidaBacen(Codigo As Integer) As Boolean
   Dim A(3), B(3), C(3) As Integer    'Vetores
   Dim Soma, RestoDiv, DV, i, DVTabela As Integer
   
   ValidaBacen = True
   MsgCPais = ""
   
   If Codigo = 0 Then Exit Function
   DVTabela = Right(Codigo, 1)
   
   'Vetor Peso
   If Len(CStr(Codigo)) = 3 Then
      B(0) = 3
      B(1) = 2
      B(2) = 1
   Else
      B(0) = 4
      B(1) = 3
      B(2) = 2
      B(3) = 1
   End If
   
   For i = 0 To (Len(CStr(Codigo)) - 2)
      A(i) = Mid(Codigo, i + 1, 1)           'Vetor Cod Pais
      C(i) = (A(i) * B(i))                   'Vetor Ponderação
      Soma = Soma + C(i)                     'Soma Ponderação
   Next

   RestoDiv = Soma Mod 11                    'Resto da Divição por 11, DV 11
   DV = IIf(RestoDiv <= 1, 0, 11 - RestoDiv) 'Dígito Verificador
      
   'Vamos verificar se esta correto o codigo
   If DV <> DVTabela Then
      MsgCPais = "Código do País Inválido!" + vbCrLf + _
                 "Favor Verificar o Código do País de Acordo com o País."
      ValidaBacen = False
   End If
End Function

