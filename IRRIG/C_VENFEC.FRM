Private Sub ProssegueExecucao()
   Dim Tb As New GRecordSet, i As Long
   Dim vgFGrid As New frmBrowse, sql As String
   
   On Error Resume Next
   
   sql = "SELECT Orçamento.[Seqüência Do Orçamento] As Orçamento, Orçamento.[Data de Emissão] As [Dt. Emissão], G.[Seqüência Do Geral] As Seqüência, " & _
         "Case When G.[Seqüência Do Geral] > 0 Then G.[Razão Social] Else Orçamento.[Nome Cliente] END As [Razão Social], " & _
         "Case When P.[Seqüência da Propriedade] > 0 Then P.[Nome da Propriedade] Else Orçamento.[Nome da Propriedade] END As Propriedade, " & _
         "Orçamento.[Valor Total Do Orçamento] [Valor Total], Orçamento.[Venda Fechada] " & _
         "FROM Orçamento LEFT JOIN Geral G ON Orçamento.[Seqüência Do Geral] = G.[Seqüência Do Geral] " & _
         "LEFT JOIN Propriedades P ON Orçamento.[Seqüência da Propriedade] = P.[Seqüência da Propriedade] " & _
         "LEFT JOIN Municípios MG ON G.[Seqüência Do Município] = MG.[Seqüência Do Município] " & _
         "LEFT JOIN Municípios MP ON P.[Seqüência Do Município] = MP.[Seqüência Do Município] " & _
         "LEFT JOIN Municípios MO ON Orçamento.[Seqüência Do Município] = MO.[Seqüência Do Município] " & _
         "WHERE " & Filtro() & _
         " ORDER BY Orçamento.[Seqüência Do Orçamento]"
      
   With vgFGrid
      Tag = "Vendas Fechadas (Aguardando Faturamento)"
            
      vgNovaQuery = sql
         
      Set Tb = vgDb.OpenRecordSet(vgNovaQuery)
                       
