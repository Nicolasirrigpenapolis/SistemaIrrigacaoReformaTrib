'inicializa variaveis (apelidos) coms os campos correspondentes
Private Sub InicializaApelidos(vgComOQue As Integer)
   On Error Resume Next                           'prepara para possíveis erros
   If (vgTb.RecordCount > 0 And vgTb.Eof = False And vgTb.Bof = False) Or vgComOQue = COM_TEXTBOX Then
      If vgComOQue = COM_TEXTBOX Then
         Percentual_Acrescimo_Produto = txtCampo(0).Value
         Percentual_Acrescimo_Conjunto = txtCampo(1).Value
         Acrescimo_do_Parcelamento = txtCampo(2).Value
         Percentual_2 = txtCampo(3).Value
         Ja_atualizou = chkCampo(0).Value
      Else
         Percentual_Acrescimo_Produto = IIf(IsNull(vgTb![Percentual Acréscimo Produto]), 0, vgTb![Percentual Acréscimo Produto])
         Percentual_Acrescimo_Conjunto = IIf(IsNull(vgTb![Percentual Acréscimo Conjunto]), 0, vgTb![Percentual Acréscimo Conjunto])
         Acrescimo_do_Parcelamento = IIf(IsNull(vgTb![Acrescimo do Parcelamento]), 0, vgTb![Acrescimo do Parcelamento])
         Percentual_2 = IIf(IsNull(vgTb![Percentual 2]), 0, vgTb![Percentual 2])
         Ja_atualizou = IIf(IsNull(vgTb![Ja atualizou]), 0, vgTb![Ja atualizou])
      End If
   End If
   If Err Then Err.Clear                          'se deu algum erro, vamos resetá-lo
End Sub

