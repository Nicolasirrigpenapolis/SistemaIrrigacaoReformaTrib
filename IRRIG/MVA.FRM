Private Function PegaSequencial() As Long
 Dim Tb As New GRecordSet
 
 If VgSituacao = ACAO_INCLUINDO Then
    Set Tb = VgDb.OpenRecordSet("SELECT MAX([ID MVA]) Seq From [IVA From UFs]")
    PegaSequencial = Tb!Seq + 1
 End If
    
End Function


Private Sub VerificaDuplicidade()
 Dim Tb As New GRecordSet
 
 Set Tb = vgDb.OpenRecordSet("SELECT * From [Iva From UFs] Where [UF] = '" & UF & "'" & " And NCM = '" & NCM & "'")
 
  If Tb.RecordCount > 0 And VgSituacao = ACAO_INCLUINDO Then
   If MsgBox("Ja Existe um Cadastro desta UF para esse NCM" & " " & Tb![UF] & " NCM" & " --> " & "" & Tb!NCM & "   Deseja Alterar os Dados?", vbQuestion + vbYesNo, vaTitulo) = vbNo Then 
      MDIIRRIG.CancelaAlteracoes
   Else
      MDIIRRIG.CancelaAlteracoes
      PosicionaRegistro frmMVA, "ID MVA", Tb![ID MVA]
   End If
  End If 
   
End Sub 


Private Sub IncluiUF()
 Dim Tb As New GRecordSet
 Dim MVA As New GRecordSet
 
  Set Tb = VgDb.OpenRecordSet("SELECT UF FROM ICMS")
  Set MVA = VgDb.OpenRecordSet("SELECT * FROM MVA")
  
   Do While Not Tb.EOF
      
      With MVA
        .AddNew
           ![ID MVA] = ID_MVA 
           !UF = Tb!UF 
        .Update
        .BookMark = .LastModified
      End With
      
   Tb.MoveNext
   Loop
 
End Sub

