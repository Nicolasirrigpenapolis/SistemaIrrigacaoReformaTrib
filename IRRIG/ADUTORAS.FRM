Private Sub InicializaApelidos(vgComOQue As Integer)
   On Error Resume Next                           'prepara para possíveis erros
   If (vgTb.RecordCount > 0 And vgTb.Eof = False And vgTb.Bof = False) Or vgComOQue = COM_TEXTBOX Then
      If vgComOQue = COM_TEXTBOX Then
         Sequencia_da_Adutora = txtCampo(0).Value
         Modelo_da_Adutora = txtCampo(1).Value
         DN = txtCampo(2).Value
         DN_mm = txtCampo(3).Value
         Coeficiente = txtCampo(4).Value
         Material = txtCampo(5).Value
         E_mm = txtCampo(6).Value
         DI_mm = txtCampo(7).Value
      Else
         Sequencia_da_Adutora = IIf(IsNull(vgTb![Sequencia da Adutora]), 0, vgTb![Sequencia da Adutora])
         Modelo_da_Adutora = IIf(IsNull(vgTb![Modelo da Adutora]), "", vgTb![Modelo da Adutora])
         DN = IIf(IsNull(vgTb!DN), 0, vgTb!DN)
         DN_mm = IIf(IsNull(vgTb![DN mm]), 0, vgTb![DN mm])
         Coeficiente = IIf(IsNull(vgTb!Coeficiente), 0, vgTb!Coeficiente)
         Material = IIf(IsNull(vgTb!Material), "", vgTb!Material)
         E_mm = IIf(IsNull(vgTb![E mm]), 0, vgTb![E mm])
         DI_mm = IIf(IsNull(vgTb![DI mm]), 0, vgTb![DI mm])
      End If
   End If
   If Err Then Err.Clear                          'se deu algum erro, vamos resetá-lo
End Sub

