Private Function Filtro() As String
  Filtro = "1 = 1"

   If Produto > 0 Then
      Filtro = Filtro & " And Produtos.[Seqüência do Produto] = " & Produto
   End If
   If Grupo > 0 Then
      Filtro = Filtro & " AND Produtos.[Seqüência do Grupo Produto] = " & Grupo 
   End If
   If SubGrupo > 0 Then
      Filtro = Filtro & " AND Produtos.[Seqüência do SubGrupo Produto] = " & SubGrupo 
