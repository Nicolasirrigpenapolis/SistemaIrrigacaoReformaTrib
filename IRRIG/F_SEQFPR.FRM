Private Sub GerarSequencia
   Dim Tb As New GRecordset, i As Long

   On error Resume Next
   
   Set Tb = vgdb.OpenRecordset("SELECT [Número da Proforma], [Seqüência do Pedido] FROM Pedido WHERE [Fatura Proforma] = 1")
   
   If Tb.RecordCount = 0 Then GoTo SaidaSub
     
   i = 1  
   Do While Not Tb.EOF
      vgdb.Execute "Update Pedido Set [Número da Proforma] = " & i & " WHERE [Seqüência do Pedido] = " & Tb![Seqüência Do Pedido]
      Tb.MoveNext
      i = i + 1
   Loop
   
   MsgBox "Seqüência Gerada com Sucesso!!!", vbInformation + vbOkOnly, vaTitulo
   
SaidaSub:
   Unload Me

End Sub


