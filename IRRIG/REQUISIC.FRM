'inicializações, validações e processos do grid filho
Private Function ExecutaGrid0(ColumnValue() As Variant, ByVal vgOq As Integer, Optional ByVal vgItem As Long, Optional ByVal vgCol As Integer, Optional vgIsValid As Boolean, Optional ByRef vgColumn As Integer, Optional vgErrorMessage As String, Optional KeyCodeAscii As Integer, Optional Shift As Integer) As Variant
   Dim vgRetVal As Variant, vgRsError As GRecordSet, x as String, vgNVez As Integer
   Dim Sequencia_Produto_Requisicao As Long, Descricao As String, Quantidade As Double
   Dim Valor_Unitario As Double, Valor_Total As Double, Veiculo As String
   vgPriVez = True
   If vgOq = PREVALIDACOES Then
      vgRetVal = False
   Else
      vgRetVal = ""
   End If
   vgNVez = 0
   On Error GoTo DeuErro
   If vgOq = CONTEUDODACOLUNA Then
      If Grid(0).Status <> ACAO_NAVEGANDO And vgItem = Grid(0).SelectedItem Then
         GoSub IniApDaCol
      Else
         GoSub IniApDaTb
      End If
      On Error Resume Next
      Select Case vgCol
         Case 5
            vgRetVal = (Quantidade * Valor_Unitario)
            vgColumn = -1                   'flag para permitir definição desse novo valor para coluna do grid
      End Select
      If Err Then Err.Clear
   ElseIf vgOq = ABRE_TABELA_GRID Then
      On Error Resume Next
      vgRetVal = "SELECT * FROM [Itens da Requisição]"

      'definindo a expressão de ligação com o pai
      x$ = "[Seqüência da Requisição] = " & Requisicao![Seqüência da Requisição]
      vgRetVal = InsereSQL(vgRetVal, EXP_WHERE, x$)

   Else
      If vgOq = VALIDACOES Then
         GoSub IniApDaCol
         vgIsValid = ((((Not Vazio(Descricao)) AND Descricao = "Gasolina") OR Descricao = "Diesel") OR Descricao = "Etanol")
         If Not vgIsValid Then vgColumn =  1 
         vgErrorMessage$ = "Requisição so é permitida para Combustivel"
         If vgIsValid And vgCol = -1 Then
            vgIsValid = (Not Vazio(Veiculo))
            If Not vgIsValid Then vgColumn =  2 
            vgErrorMessage$ = "Veiculo não pode ser vazio!"
         End If
         If vgIsValid And vgCol = -1 Then
            vgIsValid = (Valor_Unitario > 0)
            If Not vgIsValid Then vgColumn =  4 
            vgErrorMessage$ = "Valor Unitário inválido!"
         End If
         If Not vgIsValid And Len(vgErrorMessage$) = 0 Then vgErrorMessage$ = "Err"
      ElseIf vgOq = APOS_EDICAO Then
         On Error GoTo DeuErro
         GoSub IniApDaCol
         If Abs(vgSituacao) = ACAO_INCLUINDO Then
            AjustaValores
         ElseIf Abs(vgSituacao) = ACAO_EDITANDO Then
            AjustaValores
         ElseIf Abs(vgSituacao) = ACAO_EXCLUINDO Then
            AjustaValores
         End If
      ElseIf vgOq = PROCESSOS_DIRETOS Then
         GoSub IniApDaCol
         Itens_da_Requisicao.Edit
         Set vgRsError = Itens_da_Requisicao
         If ProcessaProdutos(Sequencia_da_Requisicao, Sequencia_Produto_Requisicao, Descricao, Quantidade, Valor_Unitario, Valor_Total, _
   Veiculo) Then
            Itens_da_Requisicao![Seqüência da Requisição] = (0)
            Sequencia_da_Requisicao = Itens_da_Requisicao![Seqüência da Requisição]
         End If
         Itens_da_Requisicao.Update
         Set vgRsError = Nothing
      ElseIf vgOq = PROCESSOS_INVERSOS Or vgOq = EXCLUSOES Then
         On Error GoTo DeuErro
         GoSub IniApDaTb
      End If
   End If
   GoTo FimDaSub
   Exit Function

IniApDaCol:
   On Error Resume Next
   Descricao = ColumnValue(1) & ""
   Veiculo = ColumnValue(2) & ""
   Quantidade = ColumnValue(3)
   Valor_Unitario = ColumnValue(4)
   If Grid(0).Status <> ACAO_INCLUINDO Then
      If Itens_da_Requisicao.Eof = False And Itens_da_Requisicao.BOF = False And Itens_da_Requisicao.RecordCount > 0 Then
         Sequencia_Produto_Requisicao = Itens_da_Requisicao![Seqüência Produto Requisição]
         Valor_Total = Itens_da_Requisicao![Valor Total]
      End If
   End If
   If Err Then Err.Clear
   On Error GoTo DeuErro
   Return

IniApDaTb:
   On Error Resume Next
   If Itens_da_Requisicao.Eof = False And Itens_da_Requisicao.BOF = False And Itens_da_Requisicao.RecordCount > 0 Then
      Sequencia_Produto_Requisicao = Itens_da_Requisicao![Seqüência Produto Requisição]
      Descricao = Itens_da_Requisicao!Descrição
      Quantidade = Itens_da_Requisicao!Quantidade
      Valor_Unitario = Itens_da_Requisicao![Valor Unitário]
      Valor_Total = Itens_da_Requisicao![Valor Total]
      Veiculo = Itens_da_Requisicao!Veiculo
   End If
   If Err Then Err.Clear
   On Error GoTo DeuErro
   Return

DeuErro:
   If vgOq = CONTEUDODACOLUNA Or vgOq = DEFAULTDASCOLUNAS Or vgOq < 0 Then
      vgRetVal = Null
   Else
      vgErrorMessage$ = Err.Source + "|" + Trim$(Str$(Err)) + "-" + Error$
      vgIsValid = False
   End If
   If Not vgRsError Is Nothing Then
      vgRsError.CancelUpdate
