Private Sub ProssegueExecucao()
   Dim Tb As New GRecordSet, i As Long
   Dim vgFGrid As New frmBrowse
   
   On Error Resume Next
   
   With vgFGrid
      Tag = "Conjuntos"
            
      vgNovaQuery = "SELECT Conjuntos.[Seqüência Do Conjunto], Conjuntos.Descrição [Descrição Do Conjunto], " & _
                    "[Grupo Do Produto].Descrição Grupo, [SubGrupo Do Produto].Descrição [Sub Grupo] " & _
                    "FROM Conjuntos LEFT JOIN [Grupo Do Produto] ON Conjuntos.[Seqüência Do Grupo Produto] = [Grupo Do Produto].[Seqüência Do Grupo Produto] " & _
                    "LEFT JOIN [SubGrupo Do Produto] ON Conjuntos.[Seqüência Do SubGrupo Produto] = [SubGrupo Do Produto].[Seqüência Do SubGrupo Produto] AND " & _
                    "[SubGrupo Do Produto].[Seqüência Do Grupo Produto] = [Grupo Do Produto].[Seqüência Do Grupo Produto] " & _
                    "WHERE " & Filtro() & _
                    "ORDER BY Conjuntos.[Seqüência Do Conjunto]"
         
      Set Tb = vgDb.OpenRecordSet(vgNovaQuery)
           
      .vgTitConsulta = Tag
      If Tb.RecordCount = 1 Then
         seqRegistro = Tb![Seqüência Do Conjunto]
         frmConjunto.Show
         frmConjunto.vgFiltroInicial = "[Seqüência do Conjunto] = " & seqRegistro
         InicializaFiltro frmConjunto
         frmConjunto.SetFocus
      Else
         With .grdBrowse
            .DefineOrderColumn .Columns("Seqüência do Conjunto").Index
            .ColumnWidth("Descrição do Conjunto") = 5000            
            .ColumnWidth("Grupo") = 3700
            .ColumnWidth("Sub Grupo") = 1700            
            .ShowFilterBar = True
            .Stripes = Zebrar
         End With
         Hide
         .Show
      End If
      DoEvents
    End With
End Sub

Private Function Filtro() As String
   On Error Resume Next
   
   Filtro = "[Seqüência do Conjunto] > 0"         
   If Sequencia = 0 Then
      If Not Vazio(Conjunto) Then 'Produto
         Filtro = Filtro & " AND Conjuntos.Descrição Like '%" & Conjunto & "%'"
      End If      
      If IPI Then 'Tem IPI
         Filtro = Filtro & " AND [Tem IPI] = 1"
      End If
      If Usado Then 'Usado
         Filtro = Filtro & " AND Usado = 1"
      End If      
      If Inativo Then 'Inativo
         Filtro = Filtro & " AND Inativo = 1"
      End If
      If Grupo > 0 Then
         Filtro = Filtro & " AND Conjuntos.[Seqüência do Grupo Produto] " & Tipo_Grupo & Grupo
      End If
      If Sub_Grupo > 0 Then
         Filtro = Filtro & " AND Conjuntos.[Seqüência do SubGrupo Produto] " & Tipo_SubGrupo & Sub_Grupo
      End If     
   Else
      Filtro = Filtro & " AND [Seqüência do Conjunto] = " & Sequencia
   End If
   
End Function

