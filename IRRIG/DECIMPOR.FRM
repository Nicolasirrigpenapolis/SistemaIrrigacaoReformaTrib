'inicializações, validações e processos do grid filho
Private Function ExecutaGrid0(ColumnValue() As Variant, ByVal vgOq As Integer, Optional ByVal vgItem As Long, Optional ByVal vgCol As Integer, Optional vgIsValid As Boolean, Optional ByRef vgColumn As Integer, Optional vgErrorMessage As String, Optional KeyCodeAscii As Integer, Optional Shift As Integer) As Variant
   Dim vgRetVal As Variant, vgRsError As GRecordSet, x as String, vgNVez As Integer
   Dim Sequencia_da_Adicao As Long, Numero_da_Adicao As Integer, Sequencia_do_Geral As Long
   Dim Sequencial_do_Item_da_Adicao As Integer, Valor_do_Desconto As Double
   vgPriVez = True
   If vgOq = PREVALIDACOES Then
      vgRetVal = False
   Else
      vgRetVal = ""
   End If
   vgNVez = 0
   On Error GoTo DeuErro
   If vgOq = CONTEUDODACOLUNA Then
      If Grid(0).Status <> ACAO_NAVEGANDO And vgItem = Grid(0).SelectedItem Then
         GoSub IniApDaCol
      Else
         GoSub IniApDaTb
      End If
      On Error Resume Next
      If Err Then Err.Clear
   ElseIf vgOq = CONDICOES_ESPECIAIS Then
      If vgSituacao <> ACAO_INCLUINDO Then
         GoSub IniApDaTb
      On Error Resume Next
         Grid(0).AllowInsert = (PegaValor("Nota Fiscal", "Autorizado", "[Seqüência da Nota Fiscal] = " & Sequencia_da_Nota_Fiscal) = False)
      On Error Resume Next
         Grid(0).AllowEdit = (PegaValor("Nota Fiscal", "Autorizado", "[Seqüência da Nota Fiscal] = " & Sequencia_da_Nota_Fiscal) = False)
      On Error Resume Next
         Grid(0).AllowDelete = (PegaValor("Nota Fiscal", "Autorizado", "[Seqüência da Nota Fiscal] = " & Sequencia_da_Nota_Fiscal) = False)
      End If
      vgRetVal = ""
   ElseIf vgOq = ABRE_TABELA_GRID Then
      On Error Resume Next
      vgRetVal = "SELECT * FROM [Adições da Declaração]"

      'definindo a expressão de ligação com o pai
      x$ = "[Seqüência da Declaração] = " & Declaracoes_de_Importacao![Seqüência da Declaração]
      vgRetVal = InsereSQL(vgRetVal, EXP_WHERE, x$)

   ElseIf vgOq = DEFAULTDASCOLUNAS Then
      GoSub IniApDaCol
      vgRetVal = Null
      Select Case vgCol
         Case 1
            Sequencial_do_Item_da_Adicao = SuperPegaSequencial("Adições da Declaração", "Seqüêncial do Item da Adição", "[Seqüência da Declaração] = " & Sequencia_da_Declaracao)
            vgRetVal = Sequencial_do_Item_da_Adicao
         Case 3
            Sequencia_do_Geral = SeqGeral
            vgRetVal = Sequencia_do_Geral
      End Select
   ElseIf vgOq = PEGAFILTRODASCOLUNAS Then
      On Error Resume Next
      GoSub IniApDaCol
      Select Case vgCol
         Case 3
            vgRetVal = "[Seqüência do Geral] > " & 0 & ""
      End Select
   Else
      If vgOq = VALIDACOES Then
         GoSub IniApDaCol
         vgIsValid = (Numero_da_Adicao > 0)
         If Not vgIsValid Then vgColumn =  2 
         vgErrorMessage$ = "Número da Adição inválido!"
         If Not vgIsValid And Len(vgErrorMessage$) = 0 Then vgErrorMessage$ = "Err"
      ElseIf vgOq = INICIALIZACOES Then
         GoSub IniApDaCol
         ColumnValue(1) = SuperPegaSequencial("Adições da Declaração", "Seqüêncial do Item da Adição", "[Seqüência da Declaração] = " & Sequencia_da_Declaracao)
         ColumnValue(3) = SeqGeral
      End If
   End If
   GoTo FimDaSub
   Exit Function

IniApDaCol:
   On Error Resume Next
   Sequencial_do_Item_da_Adicao = ColumnValue(1)
   Numero_da_Adicao = ColumnValue(2)
   Sequencia_do_Geral = Val(Parse$(CStr(ColumnValue(3)), Chr$(1), 1))
   Valor_do_Desconto = ColumnValue(4)
   If Grid(0).Status <> ACAO_INCLUINDO Then
      If Adicoes_da_Declaracao.Eof = False And Adicoes_da_Declaracao.BOF = False And Adicoes_da_Declaracao.RecordCount > 0 Then
         Sequencia_da_Adicao = Adicoes_da_Declaracao![Seqüência da Adição]
      End If
   End If
   If Err Then Err.Clear
   On Error GoTo DeuErro
   Return

IniApDaTb:
   On Error Resume Next
   If Adicoes_da_Declaracao.Eof = False And Adicoes_da_Declaracao.BOF = False And Adicoes_da_Declaracao.RecordCount > 0 Then
      Sequencia_da_Adicao = Adicoes_da_Declaracao![Seqüência da Adição]
      Numero_da_Adicao = Adicoes_da_Declaracao![Número da Adição]
      Sequencia_do_Geral = Adicoes_da_Declaracao![Seqüência do Geral]
      Sequencial_do_Item_da_Adicao = Adicoes_da_Declaracao![Seqüêncial do Item da Adição]
      Valor_do_Desconto = Adicoes_da_Declaracao![Valor do Desconto]
   End If
   If Err Then Err.Clear
   On Error GoTo DeuErro
   Return

DeuErro:
   If vgOq = CONTEUDODACOLUNA Or vgOq = DEFAULTDASCOLUNAS Or vgOq < 0 Then
      vgRetVal = Null
   Else
      vgErrorMessage$ = Err.Source + "|" + Trim$(Str$(Err)) + "-" + Error$
      vgIsValid = False
   End If
   If Not vgRsError Is Nothing Then
      vgRsError.CancelUpdate
      vgErrorMessage$ = vgRsError.Table & "=>" & vgErrorMessage$
      Set vgRsError = Nothing
   End If
   Resume ResumeErro

ResumeErro:
   On Error Resume Next

FimDaSub:
   ExecutaGrid0 = vgRetVal
   vgPriVez = False
End Function

