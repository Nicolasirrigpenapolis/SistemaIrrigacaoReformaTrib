Private Sub Importar()
   Dim Arq As Integer, Reg() As String, i As Long, vgNVez As Integer
   Dim Itens As New GRecordSet, Auxiliar As New GRecordSet
   Dim SaldoAux As Double
   
   On Error GoTo DeuErro
   
   Set Auxiliar = VgDb.OpenRecordSet("SELECT * From [Previsoes de Pagtos] Where [Nome da Empresa] = 'IPG'")
   
   If Auxiliar.RecordCount > 0 Then
      VgDb.Execute "DELETE FROM [Previsoes de Pagtos]"
   End If
   
   Screen.MousePointer = vbHourglass
    
   Arq = FreeFile
   Open Arquivo For Input As #Arq
      Do While Not EOF(Arq)
         i = i + 1
         ReDim Preserve Reg(i)
         Line Input #Arq, Reg(i)
      Loop 
    
   Set Itens = vgDb.OpenRecordSet("Previsoes de Pagtos")
   With Itens
        For i = 1 To UBound(Reg)
            .AddNew
             ![Razão Social] = Trim((Mid(Reg(i), 1, 60)))
             !Documento = Trim((Mid(Reg(i), 61, 20)))
             ![Data de Vencimento] = Trim((Mid(Reg(i), 81, 10)))
             ![Data de Entrada] = Trim((Mid(Reg(i), 91, 10)))
             !Parcela = Trim((Mid(Reg(i), 101, 3)))
             ![Valor da Parcela] = Trim((Mid(Reg(i), 104, 10)))
             ![Valor Previsto] = Trim((Mid(Reg(i), 114, 10)))
             ![Valor Restante] = Trim((Mid(Reg(i), 124, 10)))
             ![Saldo IPG] = Trim((Mid(Reg(i), 134, 12)))
             ![Nome da Empresa] = "IPG"
             !Imprimir = 1 
             SaldoAux = ![Saldo IPG] 
            .Update
            .BookMark = .LastModified
            DoEvents
        Next
   End With
   vgDb.Execute "Update [Previsoes de Pagtos] Set [Saldo IPG] = " & Substitui(CStr(SaldoAux), ",", ".", SO_UM) & " WHERE [Sequencia da Previsao] > 0" 
   Close #Arq 'Fim
   MsgBox "Processo Concluído com Sucesso!", vbInformation + vbOKOnly, vgAtencao
   GoTo SaiDaSub

DeuErro:
   Select Case Err
      Case 3197                                   'registro acabou de ser alterado por outro usuário
         Resume
      Case 3046, 3158, 3186, 3187, 3188, 3189, 3218, 3260
         vgNVez = vgNVez + 1                      'outro usuário acessando
         If vgNVez <= 10 Then                     'vamos tentar 10 vezes
            Delay 0.5                             'mais antes espera 1/2 segundo
            Resume
         End If
   End Select
   If Err <> 65524 Then                           'se não for um erro de crítica
      Err.Description = Err.Description & vbCrLf & vbCrLf & "Linha do Arquivo: " & i
      CErr.NumErro = Err
      CErr.Show
   End If
   vgDb.RollBackTrans                                       'desfaz alterações

SaiDaSub:
   Err.Clear
   Set Itens = Nothing
   Screen.MousePointer = vbDefault
   Unload Me
   'FrmRelpdf.Show
   'FrmRelpdf.ClicaBotao
End Sub

