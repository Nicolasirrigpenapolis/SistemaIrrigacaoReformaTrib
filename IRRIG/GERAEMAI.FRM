Private Sub criaArquivo()
   Dim Arq As Long, Linha As String, Tb As New GRecordSet
   Dim Email As String, Nome As String
   
   On Error GoTo DeuErro
   
   Arq = FreeFile 'Arquivo Livre
 
   
   Set Tb = vgDb.OpenRecordSet("SELECT * From Geral Where " & Filtro())
  
   'Se nw tiver registro vamos cair fora
   If Tb.RecordCount = 0 Then
      MsgBox "Nenhum Registro Encontrado", vbExclamation + vbOKOnly, vaTitulo
      Exit Sub
   End If
   
   'Status
   Me.Caption = "Mala Direta - Exportação " & " " & Info(Tb)

   'Abrindo o arquivo para salvar conteudo
   If Dir(Diretorio_Arquivo & "\Mala_Direta.txt", vbArchive) <> "" Then Kill Diretorio_Arquivo & "Mala_Direta.txt" 
   Open Diretorio_Arquivo & "\Mala_Direta.txt" For Append As #Arq
   
      Do While Not Tb.EOF
       If Tb![Email] <> "" Then
          Email = Tb![Email]
          If Not So_Email Then
             Nome = Tb![Razão Social]
          End If   
         'Adiciona da Linha
          If Not So_Email Then 
             Linha = Replace(Email & ";" & Nome, vbCrLf, "  ")
          Else
             Linha = Replace(Email, vbCrLf, "  ")
          End If   
          Print #Arq, Linha
       End If   
       Tb.MoveNext   
       Me.Caption = "Mala Direta - Exportação " & " " & Info(Tb) 'Status   
      Loop
   Close #Arq 'Fim
   
   Me.Caption = "Mala Direta - Exportação " & " (Dados Exportados com Sucesso!!!!) " 'Status
   Screen.MousePointer = vbDefault 'Normal
   
   MsgBox "Arquivo Criado com Sucesso!!!", vbOKOnly + vbInformation, vaTitulo
   
DeuErro:
   If Err.Number <> 0 Then
      MsgBox Err.Description, vbCritical + vbOKOnly, vaTitulo
   End If
   
End Sub


Private Function Filtro() As String
   Filtro = "Inativo = 0 And [Seqüência do Geral] > 0" 
   
   If Cliente And Not Fornecedor Then
      Filtro = Filtro & " And Cliente = 1"   
   End If
   
   If Fornecedor And Not Cliente Then
      Filtro = Filtro & " And Fornecedor = 1"  
   End If
    
End Function

