Private Sub Imprime()
   Dim Relatório As New ImprimeTexto, B As New GRecordSet, i As Integer, vgNVez As Integer, Pag As Integer, TotalInventario As Currency

   Set B = vgDb.OpenRecordSet("SELECT [Seqüência do Produto] Código, Produtos.Descrição, [Quantidade Contábil] Quantidade, [Sigla da Unidade] Unidade, [Valor Contábil Atual] Valor FROM Produtos LEFT JOIN Unidades ON Unidades.[Seqüência da Unidade] = Produtos.[Seqüência da Unidade] WHERE [Quantidade Contábil] > 0 " & Filtro("P") & _
                              "UNION ALL " & _
                              "SELECT [Seqüência do Conjunto] Código, Conjuntos.Descrição, [Quantidade Contábil] Quantidade, [Sigla da Unidade] Unidade, [Valor Contábil Atual] Valor FROM Conjuntos LEFT JOIN Unidades ON Unidades.[Seqüência da Unidade] = Conjuntos.[Seqüência da Unidade] WHERE [Quantidade Contábil] > 0 " & Filtro("C"))
      
   If B.RecordCount = 0 Then
      MsgBox "Não há registro a serem impressos!", vbCritical, vaTitulo
      GoTo SaiDaSub
   End If

   With Relatório
      .TituloTarefa = "Livro Registro de Inventário"
      .MaxLinhas = 88
      .LargLinha = 200
      Do While Not B.EOF
         GoSub Mascara
         For i = 7 To 83
            .Say i, 0, Left(Format(B!Código, "00000") & " " & UCase(SuperTiraAcentos(B!Descrição)), 53)
            .Say i, 65 - Len(Format(B!Quantidade, "###,##0.000")), Format(B!Quantidade, "###,##0.000")
            If Not IsNull(B!Unidade) Then .Say i, 66, Left(B!Unidade, 3)
            .Say i, 82 - Len(Format(B!Valor, "###,##0.0000")), Format(B!Valor, "###,##0.0000")
            .Say i, 96 - Len(Format((B!Quantidade * B!Valor), "#,###,##0.00")), Format((B!Quantidade * B!Valor), "#,###,##0.00")
            TotalInventario = (TotalInventario + (B!Quantidade * B!Valor))
            B.MoveNext
            If B.EOF Then Exit For
         Next
         If B.EOF Then
            .Say i + 1, 0, Chr(27) + Chr(71) 'Seleciona Negrito
            .Say i + 1, 78, "TOTAL:"
            .Say i + 1, 98 - Len(Format(TotalInventario, "#,###,##0.00")), Format(TotalInventario, "#,###,##0.00")
         End If
         .Imprime .MontaInfo
      Loop
      GoTo SaiDaSub

Mascara:
      Pag = Pag + 1
      .Say 0, 0, Chr(27) + Chr(48)  'Seleciona 1/8
      .Say 0, 2, Chr(27) + Chr(80)  'Seleciona 10 cpi
      .Say 0, 4, Chr(27) + Chr(71)  'Seleciona Negrito
      .Say 0, 6, Chr(27) + Chr(14)  'Largura Dupla
      .Say 0, 8, "LIVRO REGISTRO DE INVENTARIO"
      .Say 1, 0, "IRRIGACAO PENAPOLIS IND. E COM. LTDA"
      .Say 2, 0, "ESTOQUES EXISTENTES EM " & Format(Day(Dt_Final), "00") & " DE " & UCase(MonthName(Month(Dt_Final))) & " DE " & Year(Dt_Final)
