Private Function Filtro(OQue As String) As String
   Select Case OQue
      Case "P"
         If Not Vazio(Produto_Inicial) Then
            Filtro = Filtro & " AND [Seqüência do Produto] >= " & Produto_Inicial
         End If
         If Not Vazio(Produto_Final) Then
            Filtro = Filtro & " AND [Seqüência do Produto] <= " & Produto_Final
         End If
      Case "C"
         If Not Vazio(Conjunto_Inicial) Then
            Filtro = Filtro & " AND [Seqüência do Conjunto] >= " & Conjunto_Inicial
         End If
         If Not Vazio(Conjunto_Final) Then
            Filtro = Filtro & " AND [Seqüência do Conjunto] <= " & Conjunto_Final
         End If
   End Select
End Function

